<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/messageTextViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="65"
            android:text="TextView"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="898dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/nfcButton"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical|end"
            android:layout_toLeftOf="@+id/editButton"
            android:baselineAligned="false"
            android:text="Send"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="148dp" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical|end"
            android:text="Edit"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="239dp"
            tools:layout_editor_absoluteY="148dp" />

        <Button
            android:id="@+id/delButton"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical|end"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toLeftOf="@+id/nfcButton"
            android:baselineAligned="false"
            android:elevation="0dp"
            android:text="Del"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="148dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>